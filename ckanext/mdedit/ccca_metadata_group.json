{
  "scheming_version": 1,
  "group_type": "group",
  "about_url": "http://github.com/open-data/ckanext-scheming",
  "fields": [
    {
      "field_name": "title",
      "label": "Name",
      "validators": "ignore_missing unicode",
      "form_snippet": "large_text.html",
      "form_attrs": {"data-module": "slug-preview-target"},
      "form_placeholder": "My Organization"
    },
    {
      "field_name": "name",
      "label": "URL",
      "validators": "not_empty unicode name_validator group_name_validator",
      "form_snippet": "slug.html",
      "form_placeholder": "my-organization"
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "A little information about my organization..."
    },
    {
      "field_name": "image_url",
      "label": "Image URL",
      "form_snippet": "mdedit_image_upload.html",
      "form_placeholder": "http://example.com/my-image.jpg"
    },
    {
      "field_name": "homepage",
      "label": "Homepage",
      "form_placeholder": "http://example.com"
    },
    {
      "field_name": "is_collection",
      "label": "Is Collection",
      "form_placeholder": "e.g. 1042",
      "form_snippet": "mdedit_select.html",
      "display_snippet": "select.html",
      "help_text": "Collections can be used to group datasets; alle dataset with the same identifier are grouped together",
      "choices": [
        {
          "value":  "false",
          "label": "no"
        },
        {
          "value": "true",
          "label": "yes"
        }
      ]
    }
  ]
}
